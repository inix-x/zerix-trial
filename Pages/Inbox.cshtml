@page
@model InboxModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Inbox";
    ViewData["User"] = "Admin";

    @* Inbox data *@
    ViewData["Inbox_Sender_Name"] = "Ana Santos";
    ViewData["Inbox_Sender_Number"] = "(+63 999 444 8888)";
}

<div class="container-fluid mt-md-4 mt-2">
    <div class="row no-gutters">
        <!-- Sidebar -->
        <nav class="col-md-3 d-none d-md-block sidebar">
            <ul class="navbar-nav me-3">
                <li class="nav-item dropdown d-none d-sm-block">
                    <a class="fs-5 nav-link text-dark d-flex align-items-center justify-content-between btn-orange border-orange py-2 px-2 px-md-4 py-md-2" href="#" id="navbarDropdownMenuLink2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="d-flex align-items-center">
                        <img src="~/images/icons/dept.svg" height="15" width="15" alt="Department" class="d-inline-block align-top me-2 color-primary" />
                        <span class="txt-color-primary fs-6 me-2">Department</span>
                        </div>
